{
    "manifest_version": 3,
    "name": "Summarizer",
    "version": "1.0",
    "description": "A sample Chrome extension.",
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "permissions": ["activeTab"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://*/*"],
        "js": ["content.js"]
      }
    ]
  }
  